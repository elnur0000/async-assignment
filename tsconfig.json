{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "build",
        "baseUrl": "."
    }
}